<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 设置超时时间，它决定驱动等待一个数据库响应的时间  -->
        <setting name="defaultStatementTimeout" value="25000"/>
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <mappers>
        <mapper resource="mybatis/mapper/LUserMapper.xml"/>
        <mapper resource="mybatis/mapper/TeamMapper.xml"/>
        <mapper resource="mybatis/mapper/TagMapper.xml"/>
        <mapper resource="mybatis/mapper/RoleMapper.xml"/>
        <mapper resource="mybatis/mapper/FileMapper.xml"/>
    </mappers>
</configuration>