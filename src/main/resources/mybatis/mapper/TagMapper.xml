<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wordstalk.legal.drive.access.dao.profile.mapper.TagMapper">
    <resultMap id="tagDO" type="com.wordstalk.legal.drive.access.dao.profile.model.TagDO">
        <id property="id" column="id"/>
        <result property="tagName" column="tag_name"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="listTags" parameterType="com.wordstalk.legal.drive.access.dao.profile.model.SearchDO"
            resultMap="tagDO">
        SELECT id, tag_name, create_time
        FROM legal_tag_info
        <where>
            1 = 1
            <if test="status != null and status != -1">
                AND status=#{status}
            </if>
        </where>
        ORDER BY create_time
        <if test="start != null and start != -1">
            LIMIT #{start}, #{size}
        </if>
    </select>

    <select id="queryTagCount" parameterType="com.wordstalk.legal.drive.access.dao.profile.model.SearchDO"
            resultType="long">
        SELECT count(1)
        FROM legal_tag_info
        <where>
            1 = 1
            <if test="status != null and status != -1">
                AND status=#{status}
            </if>
        </where>
    </select>

    <insert id="addTag" parameterType="com.wordstalk.legal.drive.access.dao.profile.model.TagDO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO legal_tag_info
        (tag_name, status, owner_id, create_time, update_time)
        VALUES
        (#{tagName}, 1, #{ownerId}, NOW(), NOW())
    </insert>

    <update id="updateTag" parameterType="com.wordstalk.legal.drive.access.dao.profile.model.TagDO">
        UPDATE legal_tag_info SET tag_name=#{tagName}, update_time=NOW()
        WHERE id=#{id}
    </update>

    <select id="getTagById" resultMap="tagDO">
        SELECT id, tag_name, create_time FROM legal_tag_info WHERE id=#{tagId}
    </select>

</mapper>
